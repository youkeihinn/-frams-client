<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F1F1F1"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:padding="@dimen/dp_15"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="学历"
            android:layout_weight="1"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/education"
            android:gravity="center_vertical|right"
            android:text="请选择学历"
            android:layout_weight="2"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:drawableRight="@mipmap/more"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"

        android:id="@+id/root_out"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="出生日期"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textCursorDrawable="@null"
            android:background="@null"
            android:id="@+id/birthday"
            android:gravity="right"
            android:hint="请选择出生日期"

            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

    </LinearLayout>







    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="期望薪资"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/price"
            android:gravity="center_vertical|right"

            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="学校"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText

            android:id="@+id/school"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="专业"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/no"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="top"
            android:text="个人简介"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/mark"
            android:gravity="top"
            android:layout_weight="1"
            android:hint="请输入个人简介"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="190dp" />

    </LinearLayout>
    <com.allen.library.SuperButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:layout_alignParentBottom="true"
        app:sCornersRadius="10dp"
        app:sGradientCenterColor="@color/sGradientCenterColor"
        app:sGradientEndColor="@color/sGradientEndColor"
        app:sSelectorNormalColor="@color/sGradientStartColor"
        app:sGradientStartColor="@color/sGradientStartColor"
        app:sSelectorPressedColor="@color/sGradientEndColor"
        app:sUseSelector="true"/>

</LinearLayout>