<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="订单号"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_orderNo"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            />

    <LinearLayout
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="时间"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_departureTime"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="出发"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_departureAddressName"
            android:text=""
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:id="@+id/root_timeNum"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="天数"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_timeNum"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="公里数"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_kilometres"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="车型"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_carType"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:id="@+id/root_userInfo"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="乘客信息"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:drawableRight="@mipmap/up"
            android:id="@+id/tv_userInfo"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:id="@+id/root_user"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:text="联系人"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/text_size_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_contacts"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <LinearLayout

            android:paddingTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:text="联系电话"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/text_size_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_phone"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <LinearLayout

            android:paddingTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:text="微信"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/text_size_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_wechat"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <LinearLayout

            android:paddingTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:text="人数"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/text_size_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_parentChildNum"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <LinearLayout

            android:paddingTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:text="行李"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/text_size_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_luggageNum"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            />
    </LinearLayout>
    <TextView
        android:text="路线"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/text_size_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/tv_ltinerary"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textIsSelectable="false" />


    <TextView
        android:text="特殊说明"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/text_size_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/tv_specialNote"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textIsSelectable="false" />

    <TextView
        android:text="备注"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/text_size_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/tv_mark"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textIsSelectable="false" />


    <View
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/line"
        />


    <LinearLayout

        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="推荐报价"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_proposedPrice"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        />


    <LinearLayout
        android:id="@+id/root_offer"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_otherOffer"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@drawable/view_border"
            android:text="另外报价"
            android:textSize="@dimen/text_size_16"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_giveUp"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@drawable/view_border"
            android:text="放弃报价"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"

            android:layout_height="wrap_content" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/root_orderPrice"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:text="成交价格"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_orderPrice"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/text_size_13"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.allen.library.SuperButton
            android:id="@+id/btn_login"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按推荐价格报价"
            android:textColor="@color/white"
            app:sCornersRadius="2dp"
            android:textSize="@dimen/text_size_16"
            android:layout_marginBottom="@dimen/dp_10"
            app:sSelectorNormalColor="@color/C54B178"
            app:sSelectorPressedColor="@color/gray_alpha_80"
            app:sUseSelector="true" />

        <com.allen.library.SuperButton
            android:visibility="gone"
            android:id="@+id/btn_complete"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认完成"
            android:textColor="@color/white"
            app:sCornersRadius="2dp"
            android:textSize="@dimen/text_size_16"
            android:layout_marginBottom="@dimen/dp_10"
            app:sSelectorNormalColor="@color/C54B178"
            app:sSelectorPressedColor="@color/gray_alpha_80"
            app:sUseSelector="true" />

    </RelativeLayout>

    </LinearLayout>




</ScrollView>

</RelativeLayout>