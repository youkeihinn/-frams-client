<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#F1F1F1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_price"
                android:textColor="@color/comm_price"
                android:text=""
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_recruitNumber"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableLeft="@mipmap/num"
                android:textColor="@color/gray_20"
                android:text=""
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/C1296db"
            android:text=""
            android:id="@+id/tv_drivingAge"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_address"
                android:textColor="@color/gray_20"
                android:text=""
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/gray_20"
                android:textSize="10sp" />

        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offline"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="下线"
                android:gravity="center_horizontal"
                android:paddingRight="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@color/bangumi_index_green_bg"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginRight="@dimen/dp_20"
                />

            <TextView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="删除"
                android:paddingRight="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@color/comm_price"
                android:textColor="@color/white"
                android:textSize="15sp"

                />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>