<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F1F1F1"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:id="@+id/root_notice"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_20"
        android:layout_height="wrap_content">

        <TextView
            android:text="人脸照片"
            android:layout_weight="1"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:scaleType="fitXY"
            android:layout_height="60dp" />

        <TextView
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:drawableRight="@mipmap/more"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_15"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="性别"
            android:layout_weight="1"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sex"
            android:gravity="center_vertical|right"
            android:text="未设置"

            android:layout_weight="2"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:drawableRight="@mipmap/more"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"

        android:id="@+id/root_out"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="姓名"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textCursorDrawable="@null"
            android:background="@null"
            android:id="@+id/nickName"
            android:gravity="center_vertical"

            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

    </LinearLayout>




    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        android:layout_height="wrap_content">

        <TextView
            android:text=""
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textCursorDrawable="@null"
            android:background="@null"
            android:id="@+id/xy"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:background="@color/white"

        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text=""
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textCursorDrawable="@null"
            android:background="@null"
            android:id="@+id/zy"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="工号"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/no"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="部门"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/address"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:text="联系电话"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/C484848"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tel"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <com.allen.library.SuperButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:layout_alignParentBottom="true"
        app:sCornersRadius="10dp"
        app:sGradientCenterColor="@color/sGradientCenterColor"
        app:sGradientEndColor="@color/sGradientEndColor"
        app:sSelectorNormalColor="@color/sGradientStartColor"
        app:sGradientStartColor="@color/sGradientStartColor"
        app:sSelectorPressedColor="@color/sGradientEndColor"
        app:sUseSelector="true"/>

</LinearLayout>