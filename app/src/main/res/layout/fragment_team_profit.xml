<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/team_bg"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/xjt"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_4"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/time"
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_login_input_rounded_bgg"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_20"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bg"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:background="@mipmap/jinbi"
            android:layout_height="100dp" />

        <LinearLayout
           android:layout_toRightOf="@+id/bg"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:text="团队今日总流水"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="￥：0"

                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_login_input_rounded_bgg"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_20"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bg1"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:background="@mipmap/jinbi"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_toRightOf="@+id/bg1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:text="  今日总提成     "
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_profitprice"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="￥：0"

                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>