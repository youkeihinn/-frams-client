<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_6"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:textColor="@color/comm_price"
                    android:text=""
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_recruitNumber"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableLeft="@mipmap/num"
                    android:textColor="@color/gray_20"
                    android:text=""
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/C1296db"
                android:text=""
                android:id="@+id/tv_drivingAge"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView

                android:layout_marginTop="@dimen/dp_6"
                android:id="@+id/tv_address"
                android:textColor="@color/C484848"
                android:text=""
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:text="职位要求"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="@dimen/dp_6"
                android:layout_below="@+id/layout"
                android:background="#F1F1F1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="@dimen/dp_6"
                android:id="@+id/tv_ask"
                android:textColor="@color/gray_20"
                android:text=""
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_below="@+id/layout"
            android:background="#F1F1F1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

        <LinearLayout
            android:id="@+id/layout1"
            android:padding="@dimen/dp_10"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:text="职位发布人"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/layout"
                android:background="#F1F1F1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>



            <LinearLayout

                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon"
                    android:scaleType="fitXY"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/C1296db"
                        android:text="张三"
                        android:id="@+id/tv_name"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="男"
                        android:id="@+id/tv_sex"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:padding="5dp"
                    android:drawableTop="@mipmap/wect"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="立即沟通"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/pink_30"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_below="@+id/layout1"
            android:background="#F1F1F1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

        <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:text="推荐职位"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>